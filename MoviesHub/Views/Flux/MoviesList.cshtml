@model IEnumerable<IMDbApiLib.Models.SearchResult>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using IMDbApiLib.Models

@{
    ViewData["Title"] = "MoviesList";
}

<h1 class="text-white text-center">Résultat de la recherche</h1>
<table class="table align-middle mb-0 bg-white m-auto w-50">
    <thead class="bg-light">
    <tr>
        <th>
            Film(s) Trouvé(s)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (SearchResult item in Model)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img
                        src="@Html.DisplayFor(model => item.Image)"
                        alt="@Html.DisplayFor(model => item.Image)"
                        class="col-md-3 img-fluid"/>
                    <div class="ms-3">
                        <p class="fw-bold mb-1">@Html.DisplayFor(model => item.Title)</p>
                    </div>
                </div>
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <a asp-action="Publish" asp-route-id="@item.Id" class="btn btn-primary">
                        Publier
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>